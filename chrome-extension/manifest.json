{
  "manifest_version": 2,
  "name": "Ourthings Tools",
  "version": "0.1",

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["ourthings.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "contextMenus"
  ]
}